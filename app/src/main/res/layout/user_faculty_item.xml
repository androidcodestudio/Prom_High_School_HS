<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_margin="15dp">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:layout_gravity="center_vertical"
        android:layout_marginVertical="@dimen/text_margin">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:weightSum="2">

            <LinearLayout
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:orientation="vertical"
                android:layout_weight="1.8"
                android:gravity="center_vertical|center"
                android:paddingLeft="12dp">

                <TextView
                    android:id="@+id/teacherName"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="Biswanath kumar Mondal"
                    android:textSize="18sp"
                    android:textStyle="bold"
                    android:textColor="@color/textColor"/>
                <TextView
                    android:id="@+id/teacherEmail"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="biswanath@gmail.com"
                    android:textSize="16sp"
                    android:textStyle="bold"
                    android:textColor="@color/textColor"/>
                <TextView
                    android:id="@+id/teacherPost"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="Principal"
                    android:textSize="16sp"
                    android:textStyle="bold"
                    android:textColor="@color/textColor"/>

            </LinearLayout>

            <de.hdodenhof.circleimageview.CircleImageView
                android:id="@+id/teacherImage"
                android:layout_width="70dp"
                android:layout_height="70dp"
                android:layout_marginVertical="@dimen/text_margin"
                android:src="@drawable/teacher_avtar"
                android:layout_weight="0.2"
                android:gravity="center_horizontal"/>

        </LinearLayout>

    </LinearLayout>


</androidx.cardview.widget.CardView>